<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_padding"
    android:background="@drawable/layout_shape"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding" >
	<TextView
	    android:id="@+id/tv_hunXiangQiCurrentSet"
	     android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:text="当前配置:"
	    />
	
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/tv_hunxingqi_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="预延时"
            android:textSize="@dimen/tv_hunxiangqi_textSize" />

        <SeekBar
            android:id="@+id/sb_yanchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:progress="50"
            android:max="100" />

        <TextView
            android:id="@+id/tv_yanchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:text="50ms" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
             android:id="@+id/tv1"
            android:layout_width="@dimen/tv_hunxingqi_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="混响时长"
            android:textSize="@dimen/tv_hunxiangqi_textSize" />

        <SeekBar
            android:id="@+id/sb_canxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:max="100" 
            android:progress="50" />

        <TextView
            android:id="@+id/tv_canxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:text="50ms" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/sb_ganshi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/tv2"
            android:progress="50" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/tv_hunxingqi_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="干湿比"
            android:textSize="@dimen/tv_hunxiangqi_textSize" />

        <TextView
            android:id="@+id/tv_ganshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv11"
            android:text="50" />

        <TextView
            android:id="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="%" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/sb_kongjian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/tv3"
            android:progress="50" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/tv_hunxingqi_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="空间广度"
            android:textSize="@dimen/tv_hunxiangqi_textSize" />

        <TextView
            android:id="@+id/tv_kongjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="50" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="%"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/sb_kuosan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/tv5"
            android:progress="50" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="@dimen/tv_hunxingqi_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="扩散程度"
            android:textSize="@dimen/tv_hunxiangqi_textSize" />

        <TextView
            android:id="@+id/tv_kuosan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="50" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="%"
            android:visibility="gone" />
    </RelativeLayout>
  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/sb_shuchu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/tv7"
            android:progress="50" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="@dimen/tv_hunxingqi_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="输出增益"
            android:textSize="@dimen/tv_hunxiangqi_textSize" />

        <TextView
            android:id="@+id/tv_shuchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="50" />

    </RelativeLayout>

    <GridView
        android:id="@+id/gridview_hunxiangqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:numColumns="4" 
        />
    <Button 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存设置"
        android:onClick="save"
        />

</LinearLayout>