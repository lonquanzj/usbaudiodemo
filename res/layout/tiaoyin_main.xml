<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_padding"
    android:background="@drawable/layout_shape"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding" >
	<TextView
	    android:id="@+id/tv_currentYinXiao"
	     android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前音效:"
	    />
    <GridView
        android:id="@+id/gridview"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="5dp"
        android:background="@null"
        android:numColumns="4" 
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <SeekBar
            android:id="@+id/sb_huatong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_junheng1"
            android:progress="50" 
            android:max="100"/>

        <TextView
            android:id="@+id/tv_junheng1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="话筒" />
         <TextView
            android:id="@+id/tv_voice"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="50" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <SeekBar
            android:id="@+id/sb_banzou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_banzou1"
            android:progress="50" />

        <TextView
            android:id="@+id/tv_banzou1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="伴奏" />
        <TextView
            android:id="@+id/tv_banzou"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="50" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <SeekBar
            android:id="@+id/sb_mainVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_mainVoice1"
            android:progress="50" />

        <TextView
            android:id="@+id/tv_mainVoice1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="主音量" />
        <TextView
            android:id="@+id/tv_mainVoice"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="50" />
    </RelativeLayout>

</LinearLayout>